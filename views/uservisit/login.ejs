<%- include('../uservisit/header') %>
<section class="vh-50">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img
          src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid"
          alt="Sample image"
        />
      </div>

      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form class="mt-5" method="post" action="/login">
          <h4>
            <%= typeof messageUS != "undefined" && messageUS ? messageUS : '' %>
          </h4>
          <div class="form-outline mb-4">
            <input
              type="text"
              id="username"
              class="form-control form-control-lg"
              placeholder="Enter UserName"
              required
              name="username"
               
            />
          </div>
          <div class="form-outline mb-3">
            <input
              type="password"
              id="password"
              class="form-control form-control-lg"
              placeholder="Enter password"
              required
              name="password"
              
            />
            <h4 class="mt-3"></h4>
              <%= typeof messagePW != "undefined" && messagePW ? messagePW : ''
              %>
            </h4>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input
                class="form-check-input me-2"
                type="checkbox"
                value=""
                id="form2Example3"
              />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button
              onclick="return val()"
              type="submit"
              class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem"
            >
              Login
            </button>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              Don't have an account?
              <a href="/register" style="color: rgb(19, 19, 219)"
                >Register Here</a
              >
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../uservisit/footer') %>
<script>
  function val() {
    let mess = "";
    let username = document.getElementById("username").value.trim();
    if (!username) {
      mess += "Username không được để trống \n";
    }
    let password = document.getElementById("password").value.trim();
    if (!password) {
      mess += "Password không được để trống \n";
    }
    if (mess) {
      alert(mess);
      return false;
    }
    return true;
  }
</script>
