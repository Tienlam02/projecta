<!-- ======= Hero Section ======= -->
<h1 style="margin-left: 20px;"class="mt-5">Thông tin chi tiết sản phẩm</h1>
<!-- content -->
<div class="py-5">
  <div class="container">
    <div style="display: flex !important; justify-content: center;">
      <aside class="col-lg-3">
        <div class="  mb-3 d-flex justify-content-center">
          <a
            data-fslightbox="mygalley"
            class=""
            target="_blank"
            data-type="image"
            href="https://bootstrap-ecommerce.com/bootstrap5-ecommerce/images/items/detail1/big.webp"
          >
            <img
              style="max-width: 100%; max-height: 100vh; margin: auto"
              class=" fit"
              src="/images/<%=result[0].image %>"
            />
          </a>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <a
            data-fslightbox="mygalley"
            class=""
            target="_blank"
            data-type="image"
            href="https://bootstrap-ecommerce.com/bootstrap5-ecommerce/images/items/detail1/big1.webp"
            class="item-thumb"
          >
            
        </div>
        <!-- thumbs-wrap.// -->
        <!-- gallery-wrap .end// -->
      </aside>
      <main class="col-lg-5" style="margin-left: 150px;">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
            <%=result[0].name %>
          </h4>
          <div class="d-flex flex-row my-3">
            <div class="text-warning mb-1 me-2">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
              <span class="ms-1"> 4.5 </span>
            </div>
            <span class="text-muted"
              ><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 orders</span
            >
            <span class="text-success ms-2">In stock</span>
          </div>

          <div class="mb-3">
            <span class="h5"><% const VND = new Intl.NumberFormat("vi-VN", { style: "currency",
              currency: "VND", }); %>Giá:  <%= VND.format(result[0].price) %></span>
             
          </div>

          <p>
            <%=result[0].description %>
          </p>

          

          <hr />

          <a href="#" class="btn btn-danger shadow-0"><i class="bi bi-plus-square"></i>Mua ngay </a>
          <button
                class="p-2"
                style="border-radius: 10px; margin-right: 5px"
              >
                <a
                href="/user/cart/?id=<%= result[0].id %>&name=<%= result[0].name %>&price=<%= result[0].price %>&image=<%= result[0].image %>&categoryid=<%= result[0].categoryid %>&description=<%= result[0].decsription %>"
                  ><i class="bi bi-cart-plus"></i>
                  <span class="fs-6" style="color: #031407"
                    >Thêm vào giỏ hàng</span
                  ></a
                >
              </button>
          
        </div>
      </main>
    </div>
  </div>
</div>
